{
  "manifest_version": 3,
  "name": "Chat Exporter",
  "version": "1.0",
  "description": "导出聊天记录为Markdown或JSON格式",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "http://chat.deepseek.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.deepseek.com/*",
    "http://chat.deepseek.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": [
      "https://chat.deepseek.com/*",
      "http://chat.deepseek.com/*",
      "https://chat.openai.com/*",
      "https://chatgpt.com/*"
    ]
  }]
} 
